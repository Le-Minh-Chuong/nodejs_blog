<div class="mt-4">
    <h2>Khoá học của tôi</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khoá học</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses as |courses|}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{courses.name}}</td>
                <td>{{courses.level}}</td>
                <td>{{courses.createdAt}}</td>
                <td>
                    <a href="/courses/{{courses._id}}/edit" class="btn btn-primary">Sửa</a>
                    <a href="" class="btn btn-danger">Xoá</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
